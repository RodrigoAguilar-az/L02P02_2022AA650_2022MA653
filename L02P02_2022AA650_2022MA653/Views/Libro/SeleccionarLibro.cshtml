@model List<L02P02_2022AA650_2022MA653.Models.libros>

@{
    ViewData["Title"] = "Comentarios por Libros";
}

<div class="container mt-4">
    <!-- Barra de progreso -->
    <ul class="progressbar">
        <li class="active">Autores</li>
        <li>Libros</li>
        <li>Comentarios Existentes</li>
        <li>Nuevo Comentario</li>
    </ul>
    <br />

    <div class="mt-4">
        <h4>Autor: <strong>@ViewBag.AutorNombre</strong></h4>
    </div>

    <div class="card mt-3">
        <div class="card-header bg-dark text-white">
            Seleccione el Libro del Autor
        </div>
        <ul class="list-group list-group-flush">
            @foreach (var libro in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @libro.nombre
                    <a href="@Url.Action("VerComentarios", "Libros", new { idLibro = libro.id })" class="btn btn-success">
                        Seleccionar
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
