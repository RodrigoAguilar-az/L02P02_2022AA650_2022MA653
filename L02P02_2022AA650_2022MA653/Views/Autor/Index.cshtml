@model List<autores>
@{
    ViewData["Title"] = "Listado de Autores";
}

<link rel="stylesheet" href="~/css/style.css" />

<div class="container">
    <ul class="progressbar">
        <li class="active">Autores</li>
        <li>Libros</li>
        <li>Comentarios Existentes</li>
        <li>Nuevo Comentario</li>
    </ul>
    <br />
    <div class="card">
        <div class="card-header">
            <h2 class="text-primary">Autor</h2>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nombre del Autor</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var autor in Model)
                    {
                        <tr>
                            <td>@autor.autor</td>
                            <td>
                                @Html.ActionLink("Seleccionar", "Seleccionar", "Autores", new { id = autor.id }, new { @class = "btn btn-success" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
