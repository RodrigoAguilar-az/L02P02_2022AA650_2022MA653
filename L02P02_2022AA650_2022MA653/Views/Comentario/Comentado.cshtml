@model List<L02P02_2022AA650_2022MA653.Models.comentarios_libros>

@{
    ViewData["Title"] = "Comentario Adicionado";
}

<link rel="stylesheet" href="~/css/Style.css" />

<div class="pro-container">
    <ul class="progressbar mb-4">
        <li>Autores</li>
        <li>Libros</li>
        <li>Comentarios Existentes</li>
        <li class="active">Nuevo Comentario</li>
    </ul>

    <div class="card mb-3 shadow">
        <div class="card-body d-flex justify-content-start gap-5">
            <div>
                <h5 class="text-primary d-inline"><strong>Autor:</strong></h5>
                <h5 class="text-dark d-inline ms-2">@ViewBag.Autor</h5>
            </div>
            <div class="ms-5">
                <h5 class="text-primary d-inline"><strong>Libro:</strong></h5>
                <h5 class="text-dark d-inline ms-2">@ViewBag.Libro</h5>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h5 class="text-primary">Comentarios Existentes</h5>
            @foreach (var comentario in Model)
            {
                <div class="card mb-2 shadow">
                    <div class="card-body">
                        <h6 class="text-dark"><strong>@comentario.usuario</strong></h6>
                        <p>@comentario.comentarios</p>
                        <small class="text-muted">@comentario.created_at.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-6">
            <h5 class="text-primary">Comentario Añadido</h5>
            @if (Model != null && Model.Any())
            {
                <div class="card mb-2 ">
                    <div class="card-body">
                        <textarea class="form-control mb-2" rows="10" readonly>@Model.FirstOrDefault()?.comentarios</textarea
                    </div>
                </div>
            }

        </div>
            <div class="card mb-2 " style="background-color: #cbf7ff;">
                <div class="card-body d-flex justify-content-center align-items-center">
                    <h5 class="text-muted fuente">Comentario Adicionado con éxito!</h5>
                </div>
            </div>

    </div>
</div>
